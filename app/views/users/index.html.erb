<div class="container">
    <div class="row">
        <div class="card" style="min-height:900px;">
            <h1>Our Users</h1>
            <hr>

            <% @users.each do |user| %>

                <div class="well">
                    <div class="row">
                        <div class="six columns">
                            <%= user.image.html_safe %>
                        </div>
                        <div class="six columns">
                            <h4><%= user.name %></h4>
                            <br>
                            <span><%= link_to 'Show', user %> | <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></span>
                        </div>
                    </div>
                </div>

            <% end %>

            <br />

            <div class="well well-large">
                <%= link_to 'New User', new_user_path, :class => "btn btn-large btn-block btn-info", :style => "font-weight:bold;" %>
            </div>

        </div>
    </div>
</div>