<div class="container">
  <div class="row">
    <div class="card" style="min-height:700px;">
      <div class="row">
        <div class="three columns">
          <%= @user.image.html_safe%>
        </div>
        <div class="nine columns">
          <div class="row">
            <h4><%= @user.name %></h4>
            <hr>
          </div>
          <div class="row">
            <div class="two columns"><b>Email</b></div><div class="seven columns"><p><%= @user.email %></p></div>
          </div>
          <div class="row">
            <div class="two columns"><b>Location</b></div><div class="seven columns"><p><%= @user.location %></p></div>
          </div>
          <hr>
          <h5>Education</h5>
          <p><%= @user.education %></p>
          <hr>
          <h5>Experience</h5>
          <p><%= @user.experience %></p>
          <hr>
        </div>

      </div>

        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Our Users', users_path %>

    </div>
  </div>
</div>

