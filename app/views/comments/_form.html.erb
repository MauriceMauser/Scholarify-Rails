<%= form_for [@commentable, @comment] do |f| %>

	<% if @comment.errors.any? %>
    	<div id="error_messages">
      		<h2>Please correct the following errors.</h2>
			      <ul>
			      <% @comment.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
		</div>
  	<% end %>


<div class="field">
	<%= f.text_area :content, :style => "width:100%;", :rows => 6 %>
</div>

<div class="actions">
	<%= f.submit :class => "btn" %>
</div>

<% end %>

