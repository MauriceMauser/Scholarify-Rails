<%= form_for(@topic) do |f| %>

	<% if params[:course] %>
		<input type="hidden" id="topic_course_id" name="topic[course_id]" value="<%= params[:course] %>">
	<% end %>

	<p>Title</p>
	<%= f.text_field :title %>

	<%= f.text_area :content, :rows => 10, :style => "width: 100%;" %>

	<hr style="border: solid #fff;">

	<div class="actions">
		<div class="well well-large"><%= f.submit :class => "btn btn-large btn-block btn-success" %></div>
	</div>

<% end %>