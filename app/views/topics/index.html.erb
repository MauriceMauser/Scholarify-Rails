<div class="container">
	<div class="row">
		<div class="card" style="min-height:700px;">

			<h2>All Topics</h2>
			<hr>

			<% @topics.each do |topic| %>

				<div class="well">

					<h4><%= topic.title %></h4>

					<p><%= topic.content %></p>

					<p style="float:right;">
				<%= link_to "Show", topic %> | 
				<%= link_to "Edit", edit_topic_path(topic) %> | 
				<%= link_to "Destroy", topic, :confirm => "Are you sure?", :method => :delete %>
					</p>

				</div>

			<% end %>

		</div>
	</div>
</div>