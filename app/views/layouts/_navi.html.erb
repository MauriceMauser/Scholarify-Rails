<div style="background-color: #3a94b5; height: 8px;"></div>
<div id="header-containertop" style="padding-top:5px;">
	<div class="row" style="margin-bottom:5px;">
		
		<% logo = image_tag("logosmall.png", alt: "Scholarify | Online Apprenticeships") %>
		<%= link_to logo, root_path, :style => "margin-top:7px;padding-top:5px;" %>

		<div class="btn-group" style="float:right;">
			
				<button class="btn">
					<% if current_user %>
						<%= current_user.name %>
					<% else %>
						<a href="#myModal" role"button" data-toggle="modal">Login</a>
					<% end %>

				</button>

				<button class="btn dropdown-toggle" data-toggle="dropdown">
					<span class="caret"></span>
				</button>

					<ul class="dropdown-menu">
						<li><%= link_to "My Courses", main_app.courses_path %></li>

						<hr style="margin:0px;">
						<li><%= link_to "Sign out", main_app.signout_path %></li>

					</ul>	
		</div>
	</div>
</div>